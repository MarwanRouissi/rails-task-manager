<%= form_with model: task do |f| %>
<div class="card">
  <div class="card-body">
    <div class="mb-3 d-grid">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="mb-3 d-grid">
      <%= f.label :details %>
      <%= f.text_field :details %>
    </div>
    <%= f.submit %>
  </div>
</div>
<% end %>

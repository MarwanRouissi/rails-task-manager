<div class="container m-0">
  <h1>My tasks</h1>
  <ul class="list-group">
  <% @tasks.each do |task| %>
    <li>
      <% task.completed ? box_style = "fa-square-check" : box_style = "fa-square" %>
      <i class="fa-regular <%= box_style %>"></i>
      <%= link_to task.title, task_path(task) %>
      â€¢
      <%= link_to ('<i class="fa-solid fa-trash"></i>').html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
  </ul>
  <br>
  <%= link_to 'Add a new task', new_task_path %>
</div>
